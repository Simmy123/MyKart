<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    tools:context=".HomeActivity">

<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.constraint.Guideline
            android:id="@+id/horizontal_guideline_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_bias=".2" />

        <android.support.constraint.Guideline
            android:id="@+id/vertical_guideline_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintHorizontal_bias=".2" />
        <android.support.constraint.Guideline
            android:id="@+id/vertical_centre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintHorizontal_bias=".5"/>

        <android.support.constraint.Guideline
            android:id="@+id/horizontal_guideline_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_bias=".8" />

        <android.support.constraint.Guideline
            android:id="@+id/vertical_guideline_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintHorizontal_bias=".8" />

        <TextView
            android:id="@+id/list_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Bottle"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@id/horizontal_guideline_bottom"
            app:layout_constraintLeft_toRightOf="@id/vertical_guideline_left"
            app:layout_constraintRight_toLeftOf="@id/vertical_guideline_right"
            app:layout_constraintTop_toBottomOf="@id/horizontal_guideline_top" />

        <ImageView
            android:id="@+id/list_item_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="@id/list_item_name"
            app:layout_constraintTop_toBottomOf="@id/list_item_name" />

        <TextView
            android:id="@+id/list_item_price"
            android:hint="Rs.200"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            app:layout_constraintStart_toStartOf="@id/list_item_image"
            app:layout_constraintEnd_toEndOf="@id/list_item_image"
            app:layout_constraintTop_toBottomOf="@id/list_item_image" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>