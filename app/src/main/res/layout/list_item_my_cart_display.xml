<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Item Id"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="18dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintStart_toEndOf="@id/item_id_title"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand Name"
        android:id="@+id/item_brand_name_title"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/item_id_title"
        app:layout_constraintTop_toBottomOf="@id/item_id_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_brand_name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintStart_toEndOf="@id/item_brand_name_title"
        app:layout_constraintTop_toBottomOf="@id/item_id_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Type"
        android:id="@+id/list_item_type_title"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/item_brand_name_title"
        app:layout_constraintTop_toBottomOf="@id/item_brand_name_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_type"
        app:layout_constraintStart_toEndOf="@id/list_item_type_title"
        app:layout_constraintTop_toBottomOf="@id/item_brand_name"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Type"
        android:id="@+id/list_item_price_title"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/list_item_type_title"
        app:layout_constraintTop_toBottomOf="@id/list_item_type_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_price"
        app:layout_constraintStart_toEndOf="@id/list_item_price_title"
        app:layout_constraintTop_toBottomOf="@id/list_item_type"
        android:layout_marginLeft="15dp"/>


</android.support.constraint.ConstraintLayout>
